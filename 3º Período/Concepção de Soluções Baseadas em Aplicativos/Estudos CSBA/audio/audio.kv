<Principal>
    orientation: 'vertical'
    AnchorLayout:
        size_hint_y: 1.5        
        Button:
            size_hint: None, None
            size: self.parent.height/1.5, self.parent.height/1.5
            anchor_x: 'center'
            anchor_y: 'center'
            text:"4"
            id: botao
            on_release: root.clique_botao()
            font_size: 50
            font_name: "webdings.ttf"

    Slider:
        size_hint_y: 0.2
        id:posicao
        value: 0
        disabled:False
    BoxLayout:
        Label:
            size_hint_x:0.4
            text:'Volume'
        Slider:
            range: (0,1)
            value: 1
            on_value: root.muda_volume(self.value)


        