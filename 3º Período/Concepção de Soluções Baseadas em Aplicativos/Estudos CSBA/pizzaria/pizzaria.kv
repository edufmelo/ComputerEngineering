<Tela>
    orientation: 'vertical'
    BoxLayout:
        size_hint: (None,None)
        width: 400
        height: 60    
        Label:
            size_hint: (None,None)
            text:'Cliente:'
            width: 250
            height: 40
        TextInput:
            size_hint: (None,None)
            height: 40
            width: 250
            id: nome
    Label:
        id: sbv
        font_size: 25
        color: 1,1,0,1
        width:400
        height: 40
        size_hint: (None,None)
    BoxLayout:
        Label:
            text:'Pizzaria do Semestre'
            font_size: 40
            color: 0,1,0,1
    BoxLayout:
        height: 40
        size_hint: (None,None)
     
        Label:
            height: 40
            text:'Opções'
            font_size: 25
            width: 250  
            size_hint: (None,None) 
            color: 1,1,0,1
        Label:
            height: 40        
            text:'Quantidade'
            font_size: 25            
            width:150
            size_hint: (None,None)
            color: 1,1,0,1
    GridLayout:
        rows: 5
        cols:3
        CheckBox:
            id: id1
            on_active: root.ativar(self.active,lb1.text)
        Label:
            id:lb1
            text:'Marguerita'
            width: 250
            height:40
            size_hint:(None,None)
        TextInput:
            id: tx1
            width: 100
            height:40
            size_hint:(None,None)

        CheckBox:
            id: id2
            on_active: root.ativar(self.active,lb2.text)
        Label:
            id:lb2
            text:'Napolitana'
            width: 250
            height:40
            size_hint:(None,None)
        TextInput:
            id: tx2
            width: 100
            height:40
            size_hint:(None,None)
 
        CheckBox:
            id: id3
            on_active: root.ativar(self.active,lb3.text)
        Label:
            id:lb3
            text:'Atum'
            width: 250
            height:40
            size_hint:(None,None)
        TextInput:
            id: tx3
            width: 100
            height:40
            size_hint:(None,None)            

        CheckBox:
            id: id4
            on_active: root.ativar(self.active,lb4.text)
        Label:
            id:lb4
            text:'5 queijos'
            width: 250
            height:40
            size_hint:(None,None)
        TextInput:
            id: tx4
            width: 100
            height:40
            size_hint:(None,None)

        CheckBox:
            id: id5
            on_active: root.ativar(self.active,lb5.text)
        Label:
            id:lb5
            text:'Frango com Catupiry'
            width: 250
            height:40
            size_hint:(None,None)
        TextInput:
            id: tx5
            width: 100
            height:40
            size_hint:(None,None)            
    BoxLayout:
        Spinner:
            id:sp1
            text: 'pagamento'
            values: ('A vista (-5%)','2 vezes (+2,5%)','28 dias (+8%)')
            width: 150
            height: 40
            size_hint: (None,None)
            on_text: root.pagar(sp1.text)
        Label:
            text:'A pagar R$ '
            id: total
            width: 150
            height: 40
            size_hint: (None,None)            
        Button:
            text:'Limpa'
            width:100
            height:40
            size_hint:(None,None)
            on_press: root.limpa()